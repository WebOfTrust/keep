{
  "name": "keep",
  "version": "1.0.0",
  "description": "Electron based application for managing KERI identifiers",
  "author": {
    "name": "Kevin Griffin",
    "email": "griffin.kev@gmail.com"
  },
  "homepage": "https://weboftrust.github.io/keep",
  "license": "Apache-2.0",
  "main": "electron.js",
  "scripts": {
    "start": "parcel src/index.html --cache-dir ward/.parcel-cache-dev --dist-dir ward/build-ui-dev",
    "rm-build": "rm -rf ward/.parcel-cache ward/build-ui ward/.parcel-cache-dev ward/build-ui-dev",
    "build": "yarn run rm-build; parcel build src/index.html --cache-dir ward/.parcel-cache --dist-dir ward/build-ui --public-url ./",
    "electron": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "pages:start": "parcel pages/index.html",
    "pages:rm-build": "rm -rf .parcel-cache dist",
    "pages:build": "yarn run pages:rm-build; parcel build pages/index.html --public-url ./",
    "prepages:deploy": "yarn run pages:build",
    "pages:deploy": "gh-pages -d dist",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{js,html,jsx,json,scss,css,md}'",
    "nuke": "rm -rf node_modules/; yarn run rm-build; yarn run pages:rm-build"
  },
  "targets": {
    "main": false
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "keep"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "material-components-web": "^13.0.0",
    "mithril": "^2.0.4",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@electron-forge/cli": "^6.0.0-beta.60",
    "@electron-forge/maker-deb": "^6.0.0-beta.60",
    "@electron-forge/maker-dmg": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.60",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.60",
    "@electron-forge/maker-zip": "^6.0.0-beta.60",
    "@parcel/transformer-sass": "^2.0.1",
    "babel-jest": "^27.2.4",
    "electron": "^13.2.3",
    "eslint": "^8.0.1",
    "faker": "^5.5.3",
    "gh-pages": "^3.2.3",
    "jest": "^27.0.6",
    "jest-transform-stub": "^2.0.0",
    "jslint": "^0.12.1",
    "mithril-query": "^4.0.1",
    "parcel": "^2.0.1",
    "prettier": "^2.3.2",
    "sass": "^1.43.2"
  }
}
